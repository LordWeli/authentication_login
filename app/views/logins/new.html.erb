<div class="container-fluid">
  <div class="row justify-content-md-center">
    <%= render 'shared/flash' %>
  </div>
  <div class="row justify-content-md-center">
    <%= form_for(@login, url: logins_path) do |f| %>
      <div class="row">
        <div class="col-md-2">
        </div>
        <div class="col-md-4">
          <%= image_tag "cheese_icon.png", height: '150', width: '210', class: "mb-4", title: 'Cheese' %>
        </div>
        <div class="col-md-4">
        </div>
      </div>
      <div class="row">
        <label for="inputEmail">Nome de usuário</label>
        <%= text_field_tag :username, '', class: 'form-control', style: "margin-bottom: 10px;", placeholder: 'Nome de usuário', required: true %>
      </div>

      <div class="row">
        <label for="inputPassword">Senha</label>
        <%= text_field_tag :password, '', class: 'form-control', style: "margin-bottom: 10px;", placeholder: 'Senha', type: 'password', required: true %>
      </div>

      <div class="row justify-content-md-center">
        <div class="col-md-6">
          <%= f.submit 'Entrar', class: 'btn btn-lg btn-primary btn-block' %>
        </div>
      </div>
    <% end %>
  </div>
</div>

<style>
html,
body {
  height: 100%;
}

body {
  display: -ms-flexbox;
  display: -webkit-box;
  display: flex;
  -ms-flex-align: center;
  -ms-flex-pack: center;
  -webkit-box-align: center;
  align-items: center;
  -webkit-box-pack: center;
  justify-content: center;
  padding-top: 40px;
  padding-bottom: 40px;
  background-color: #f5f5f5;
}
</style>